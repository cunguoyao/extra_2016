<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:minWidth="200dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:background="@drawable/button_gray"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="分享到"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#D1D1D1" />
    <LinearLayout
        android:id="@+id/message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btn_share_link"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/normal_item_bg"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_btn_share_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/pop_share_ic_link">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:text="链接分享"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/separate_line"/>
            <LinearLayout
                android:id="@+id/btn_share_repo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/normal_item_bg"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_btn_share_repo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/pop_share_ic_repo">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:text="共享到资料库"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/separate_line"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btn_share_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/normal_item_bg"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_btn_share_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/pop_share_ic_user">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:text="共享到用户"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/separate_line"/>
            <LinearLayout
                android:id="@+id/btn_share_mail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/normal_item_bg"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_btn_share_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/pop_share_ic_mail">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:text="邮件外发"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/separate_line"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
