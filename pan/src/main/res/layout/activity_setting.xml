<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_color">
    <include layout="@layout/common_title"/>
    <RelativeLayout
        android:id="@+id/setting_no_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/normal_item_no_line_bg"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/normal_black"
            android:text="开启免扰"/>
        <ToggleButton
            android:id="@+id/checkbox_message_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkbox_setting"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textOn=""
            android:textOff=""/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/setting_message_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/normal_item_bg"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/normal_black"
            android:text="审批通知"/>
        <ToggleButton
            android:id="@+id/checkbox_message_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkbox_setting"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textOn=""
            android:textOff=""/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/setting_message_repo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/normal_item_bg"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/normal_black"
            android:text="资料库信息通知"/>
        <ToggleButton
            android:id="@+id/checkbox_message_repo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkbox_setting"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textOn=""
            android:textOff=""/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/setting_message_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/normal_item_bg"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/normal_black"
            android:text="共享链接通知"/>
        <ToggleButton
            android:id="@+id/checkbox_message_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkbox_setting"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textOn=""
            android:textOff=""/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_change_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="10dp"
        android:background="@drawable/normal_item_bg"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/normal_black"
            android:text="修改密码"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/setting_change_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="10dp"
        android:background="@drawable/normal_item_no_line_bg"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/normal_black"
            android:text="高级设置"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
</LinearLayout>