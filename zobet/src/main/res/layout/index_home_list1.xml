<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.zokbet.betdd.widget.WrapContentHeightViewPager
        android:id="@+id/index_home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/normal_white" />

    <RadioGroup
        android:id="@+id/index_home_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/index_home_rb1"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:button="@drawable/main_pager_dot"
            android:clickable="false"
            android:gravity="center"
            android:paddingLeft="0dp" />

        <RadioButton
            android:id="@+id/index_home_rb2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/main_pager_dot"
            android:clickable="false"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/index_home_rb3"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:button="@drawable/main_pager_dot"
            android:clickable="false"
            android:gravity="center"
            android:paddingLeft="0dp" />
    </RadioGroup>

</FrameLayout>